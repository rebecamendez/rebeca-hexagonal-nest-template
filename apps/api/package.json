{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build:deps": "turbo run build --filter=@rebeca-hexagonal-nest-template/api-contract",
    "build": "nest build",
    "clean": "rm -rf node_modules .turbo dist coverage tsconfig.tsbuildinfo",
    "dev:init": "cp .env.example .env && npm run migration:run",
    "dev": "nest start --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "migration:create": "npm run typeorm -- migration:create",
    "migration:generate": "npm run typeorm -- migration:generate -d src/config/typeorm.config.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/config/typeorm.config.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/config/typeorm.config.ts",
    "migration:show": "npm run typeorm -- migration:show -d src/config/typeorm.config.ts",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "start": "nest start",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test": "jest --coverage --forceExit --silent --logHeapUsage --detectOpenHandles",
    "test:unit": "jest --config jest.config.unit.js --coverage --forceExit --silent --logHeapUsage --detectOpenHandles",
    "test:repository": "jest --config jest.config.repository.js --coverage --forceExit --silent --logHeapUsage --detectOpenHandles",
    "test:e2e": "jest --config jest.config.e2e.js --coverage --forceExit --silent --logHeapUsage --detectOpenHandles",
    "typeorm": "typeorm-ts-node-commonjs"
  },
  "dependencies": {
    "@nestjs/common": "11.1.9",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.9",
    "@nestjs/platform-express": "11.1.9",
    "@nestjs/swagger": "11.2.1",
    "@nestjs/typeorm": "11.0.0",
    "@rebeca-hexagonal-nest-template/api-contract": "workspace:*",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "express-http-context": "2.0.1",
    "jest-mock-extended": "4.0.0",
    "nest-winston": "1.10.2",
    "pg": "8.16.3",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "typeorm": "0.3.27",
    "winston": "3.18.3"
  },
  "devDependencies": {
    "@nestjs/cli": "11.0.10",
    "@nestjs/schematics": "11.0.9",
    "@nestjs/testing": "11.1.9",
    "@rebeca-hexagonal-nest-template/lint-config": "workspace:*",
    "@types/express": "5.0.5",
    "@types/jest": "30.0.0",
    "@types/node": "24.10.1",
    "@types/supertest": "6.0.3",
    "jest": "30.2.0",
    "jest-mock-extended": "4.0.0-beta1",
    "source-map-support": "0.5.21",
    "supertest": "7.1.4",
    "testcontainers": "11.8.1",
    "ts-jest": "29.4.5",
    "ts-json-schema-generator": "2.4.0",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.3"
  }
}
